<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal"
    android:weightSum="6">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/medal_1st"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/icon_1st"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/medal_2nd"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/icon_2nd"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/medal_3rd"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/icon_3rd"
            android:visibility="gone"/>
        
        <TextView
            android:id="@+id/txt_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16dp"
            android:text="1"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mock_user"/>

        <TextView
            android:id="@+id/display_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="aaaaaaaa"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_travel_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="1"/>

    <TextView
        android:id="@+id/txt_travel_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="1"/>

</LinearLayout>